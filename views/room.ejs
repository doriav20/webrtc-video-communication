<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room <%= roomId %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="style.css"/>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const ROOM_ID = "<%= roomId %>";
    </script>
</head>
<body>
<div id="main" class="main">
    <div class="main__left">
        <div class="main__videos">
            <div id="video-grid"></div>
        </div>
        <div class="main__controls">
            <div class="main__controls_block">
                <div
                        id="muteButton"
                        class="main__controls_button"
                        onclick="muteUnmute()"
                >
                    <i class="fa fa-microphone"></i>
                    <span>Mute</span>
                </div>
                <div
                        id="playPauseVideo"
                        class="main__controls_button"
                        onclick="playPauseVideoEvent()"
                >
                    <i class="fa fa-video-camera"></i>
                    <span>Pause Video</span>
                </div>
            </div>
            <div id="nameInput" class="main__controls_block">
                <div class="main__controls_button">
                    <input
                            id="username"
                            class="usernameTextBox"
                            type="text"
                            placeholder="Enter Your Username"
                    >
                </div>
                <div class="main__controls_button">
                    <input
                            id="submitBtn"
                            class="usernameSubmitButton"
                            type="submit"
                            value=" Submit "
                            onclick="nameSubmitted()">
                </div>
            </div>
            <div class="main__controls_block">
                <div
                        id="screenshare"
                        class="main__controls_button"
                        onclick="playPauseScreenshareEvent()"
                >
                    <i class="fa fa-tv"></i>
                    <span>Share Screen</span>
                </div>
                <div
                        class="main__controls_button"
                        onclick="takeScreenshotEvent()"
                >
                    <i class="fa fa-clone"></i>
                    <span>Screenshot</span>
                </div>
            </div>
            <div class="main__controls_block">
                <div
                        id="sharing"
                        class="main__controls_button"
                        onclick="copyURL()"
                >
                    <i class="fa fa-share"></i>
                    <span>Invite</span>
                </div>
                <div class="main__controls_button leaveMeeting" id="leave-meeting" onclick="leave()">
                    <i class="fa fa-times"></i>
                    <span>Leave Meeting</span>
                </div>
            </div>
        </div>
    </div>
    <div class="main__right">
        <div class="main__header">
            <h4 id="chatTitle">Chat</h4>
        </div>
        <div class="main__chat__window" id="main__chat__window">
            <ul class="messages" id="all_messages"></ul>
        </div>
        <div class="main__message_container">
            <input
                    type="text"
                    id="chat_message"
                    placeholder="Type message here.."
            />
        </div>
    </div>
</div>
<script src="script.js"></script>
</body>
</html>
